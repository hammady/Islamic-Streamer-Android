<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="20pt">
    <RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_weight="1"
    android:id="@+id/alaListItemId"
    android:layout_height="fill_parent">
        <CheckBox
        android:layout_alignParentLeft="true"
        android:layout_y="0pt"
        android:id="@+id/cbListViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="true"
        android:layout_gravity="center_vertical"
        android:focusable="false" android:focusableInTouchMode="false"
        android:checked="false"/>
        <TextView
        android:layout_alignParentRight="true"
        android:layout_y="5pt"
        android:layout_toRightOf="@+id/cbListViewItem"
        android:layout_width="fill_parent"
        android:layout_height="20pt"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:focusable="false" android:focusableInTouchMode="false"
        android:id="@+id/tvSurahName" />
        <TextView
        android:layout_x="25pt"
        android:layout_y="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSurahId"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />
        <TextView
        android:layout_x="25pt"
        android:layout_y="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemPosition"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />
        
        <ImageView 
        android:layout_width="20px"
        android:layout_height="20px"
        android:saveEnabled="true"
        android:layout_x="20pt"
        android:layout_y="11pt"
        android:id="@+id/ivImg"
        android:visibility="invisible"
        />
        
    </RelativeLayout>
</LinearLayout>
